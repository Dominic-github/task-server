{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["es2022"],
    "moduleResolution": "node",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": ["src/@types", "./node_modules/@types"],
    "outDir": "./dist",
    "baseUrl": "./",
    "rootDir": "./",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["*.ts", "src/*", "server.ts"],
  "exclude": ["node_modules"]
}
